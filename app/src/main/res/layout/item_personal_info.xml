<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv_personal_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical">

    <com.ycjt.sx.widget.view.CircleImageView
        android:id="@+id/iv_personal_icon"
        android:layout_width="@dimen/dimen_80_dip"
        android:layout_height="@dimen/dimen_80_dip"
        android:layout_margin="@dimen/dimen_10_dip"
        android:src="@drawable/personal_icon_normal" />

    <com.ycjt.sx.widget.fonts.FontTextView
        android:id="@+id/tv_personal_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_8_dip"
        android:layout_toRightOf="@id/iv_personal_icon"
        android:fontFamily="@font/custom_regular"
        android:gravity="center_vertical"
        android:text="姓名"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.ycjt.sx.widget.fonts.FontTextView
        android:id="@+id/tv_personal_tel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20_dip"
        android:layout_below="@id/tv_personal_name"
        android:layout_marginTop="@dimen/dimen_3_dip"
        android:layout_toRightOf="@id/iv_personal_icon"
        android:fontFamily="@font/custom_regular"
        android:gravity="center_vertical"
        android:text="电话"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <com.ycjt.sx.widget.fonts.FontTextView
        android:id="@+id/tv_personal_unit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_20_dip"
        android:layout_below="@id/tv_personal_tel"
        android:layout_marginTop="@dimen/dimen_3_dip"
        android:layout_toRightOf="@id/iv_personal_icon"
        android:fontFamily="@font/custom_regular"
        android:gravity="center_vertical"
        android:text="部门"
        android:textColor="@color/gray"
        android:textSize="12sp" />
</RelativeLayout>



