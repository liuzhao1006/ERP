<?xml version="1.0" encoding="utf-8"?>

<com.ycjt.sx.widget.Ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_60_dip"
    app:mrl_rippleAlpha="0.5"
    app:mrl_rippleBackground="#FEFFFF"
    app:mrl_rippleColor="#F5F6F7"
    app:mrl_rippleDelayClick="true"
    app:mrl_rippleDimension="10dp"
    app:mrl_rippleDuration="1000"
    app:mrl_rippleFadeDuration="500"
    app:mrl_rippleHover="true"
    app:mrl_rippleOverlay="true"
    app:mrl_ripplePersistent="false"
    app:mrl_rippleRoundedCorners="@dimen/dimen_1_dip">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_maillist_expand"

            style="@style/ImageView" />

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_maillist_subsidiary_parent_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ren_icon" />

            <com.ycjt.sx.widget.fonts.FontTextView
                android:id="@+id/tv_maillist_subsidiary_parent_depart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:fontFamily="@font/custom_regular"
                android:gravity="center_vertical"
                android:text="部门"
                android:textSize="16sp" />
        </LinearLayout>


    </RelativeLayout>
</com.ycjt.sx.widget.Ripple>