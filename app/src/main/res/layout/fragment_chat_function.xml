<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_16_dip">

    <com.ycjt.sx.widget.fonts.FontTextView
        android:id="@+id/chat_function_photo"
        style="@style/text_body"
        android:drawablePadding="@dimen/dimen_10_dip"
        android:drawableTop="@mipmap/icon_chat_photo"
        android:gravity="center"
        android:text="相册" />

    <com.ycjt.sx.widget.fonts.FontTextView
        android:id="@+id/chat_function_photograph"
        style="@style/text_body"
        android:layout_marginLeft="@dimen/dimen_10_dip"
        android:drawablePadding="@dimen/dimen_10_dip"
        android:drawableTop="@mipmap/icon_chat_photograph"
        android:gravity="center"
        android:text="摄像" />
</LinearLayout>